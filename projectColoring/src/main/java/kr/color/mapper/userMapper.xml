<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="kr.color.mapper.userMapper">

	<insert id="register" parameterType="kr.color.domain.UserInfo">
		insert into 
		userInfo(user_id,user_pwd,user_name,user_email,user_phone,admin_yn)
		values(#{userId},#{userPwd},#{userName},#{userEmail},#{userPhone},"N")
	</insert>
	
	<select id="login" parameterType="kr.color.domain.UserInfo" resultType="kr.color.domain.UserInfo">
	    select * from userInfo where user_id=#{user_id} and user_pwd=#{user_pwd};
	</select>
	
</mapper>